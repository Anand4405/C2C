<%- include('partials/header') %>

<div class="row">
<div class="col-md-6 col-sm-12">
<form class="bankform" id="loanForm" action="users/profile/<%=locals.user._id%>/applyLoanSubmit" method="POST">
<h3 class="username">Apply for a Loan</h3>
<input name="name" type="text" placeholder="Your name" class="box"><br>
<input name="accNo" type="text" placeholder="Account number" class="box"><br>
<input name="amount" type="number" placeholder="Loan amount" class="box"><br>
<input name="tenure" type="text" placeholder="Tenure" class="box"><br>
<input name="Interest" type="number" placeholder="Interest rate" class="box"><br>
<button type="button" name="button" class="btn btn-1" type="button">Apply</button>
</div>
<div class="col-md-6 col-sm-12">
<img class="doc-pic" src= "/images/loan1.jpg" alt="loan-pic">
</div>
</div>

